<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFinal"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.04">

        <TextView
            android:id="@+id/intrebareVarsta"
            android:layout_width="125dp"
            android:layout_height="37dp"
            android:gravity="center"
            android:text="Cati ani ai?"
            app:layout_constraintBottom_toTopOf="@+id/etVarsta"
            app:layout_constraintEnd_toEndOf="@id/btnInainte1"

            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.732"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/intrebareNume"
            android:layout_width="125dp"
            android:layout_height="37dp"
            android:gravity="center"
            android:text="Cum te numesti?"
            app:layout_constraintBottom_toTopOf="@+id/etNume"
            app:layout_constraintEnd_toEndOf="@id/btnInainte1"

            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.732"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/intrebareEmail"
            android:layout_width="125dp"
            android:layout_height="37dp"
            android:gravity="center"
            android:text="Care este adresa ta de email?"
            app:layout_constraintBottom_toTopOf="@+id/etEmail"
            app:layout_constraintEnd_toEndOf="@id/btnInainte1"

            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.732"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/intrebareParola"
            android:layout_width="125dp"
            android:layout_height="37dp"
            android:gravity="center"
            android:text="Creeaza o parola"
            app:layout_constraintBottom_toTopOf="@+id/etParola"
            app:layout_constraintEnd_toEndOf="@id/btnInainte1"

            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.732"
            android:visibility="invisible" />



        <EditText
            android:id="@+id/etVarsta"
            android:layout_width="375dp"
            android:layout_height="65dp"
            android:layout_marginEnd="28dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Varsta"
            android:inputType="numberDecimal"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.16"
            android:visibility="visible"
            />

        <EditText
            android:id="@+id/etNume"
            android:layout_width="375dp"
            android:layout_height="65dp"
            android:layout_marginEnd="28dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Nume"


            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.16"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="375dp"
            android:layout_height="65dp"
            android:layout_marginEnd="28dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Email"
            android:inputType="textEmailAddress"


            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.16"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/etParola"
            android:layout_width="375dp"
            android:layout_height="65dp"
            android:layout_marginEnd="28dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Parola"
            android:drawableRight="@drawable/ic_baseline_remove_red_eye_24"
            android:drawablePadding="20dp"

            android:padding="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.16"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnInainte1"
            android:layout_width="376dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#7AC70C"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="INAINTE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.275" />

        <TextView
            android:id="@+id/infoJos"
            android:layout_width="357dp"
            android:layout_height="60dp"
            android:layout_marginEnd="24dp"
            android:text="By signing in to Duolingo, you agree to our Terms and Privacy Policy."

            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.937" />
    </androidx.constraintlayout.widget.ConstraintLayout>





</LinearLayout>