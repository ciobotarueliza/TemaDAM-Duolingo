<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register2"
    android:orientation="vertical" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.04">

        <TextView
            android:id="@+id/intrebareNume"
            android:layout_width="125dp"
            android:layout_height="37dp"
            android:gravity="center"
            android:text="Cum te numesti?"
            app:layout_constraintBottom_toTopOf="@+id/etNume"
            app:layout_constraintEnd_toEndOf="@id/btnInainte2"

            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.732" />

        <EditText
            android:id="@+id/etNume"
            android:layout_width="375dp"
            android:layout_height="65dp"
            android:layout_marginEnd="28dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Nume"


            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.16" />

        <Button
            android:id="@+id/btnInainte2"
            android:layout_width="376dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="INAINTE"
            app:layout_constraintBottom_toBottomOf="parent"
            android:backgroundTint="#7AC70C"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.275" />

        <TextView
            android:id="@+id/infoJos"
            android:layout_width="357dp"
            android:layout_height="60dp"
            android:layout_marginEnd="24dp"
            android:text="By signing in to Duolingo, you agree to our Terms and Privacy Policy."

            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.937" />

        <TextView
            android:id="@+id/received2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="invisible"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>